<resources>
    <!-- Base application theme. -->
    <style name="Theme.BussinessPlan" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Customize your theme here. -->


    </style>


    <style name="Button.primary" parent="ThemeOverlay.AppCompat">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Button.secondary" parent="Button.primary">
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.BussinessPlan.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BussinessPlan.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BussinessPlan.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>